<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', documents_path %></li>
      <li><%= link_to 'New', new_document_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Documents</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
					          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @documents.each do |document| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= document.id %>
          </td>
										<td>
            <%= document.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', document_path(document) %> |
            <%= link_to 'edit', edit_document_path(document) %> |
            <%= link_to 'destroy', document_path(document), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @documents  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>